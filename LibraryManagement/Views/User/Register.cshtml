@model LibraryManagement.Data.ApplicationUser

<h2>Kullanıcı Kayıt</h2>

<form asp-action="Register" method="post">
    <div class="mb-3">
        <label asp-for="FullName" class="form-label">Ad Soyad</label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label for="Password" class="form-label">Şifre</label>
        <input name="Password" id="Password" type="password" class="form-control" />
        @* <span asp-validation-for="Password" class="text-danger"></span> *@
        @* Password validation will need to be handled by the controller or a ViewModel *@
    </div>

    <button type="submit" class="btn btn-primary">Kayıt Ol</button>
</form>

<a asp-action="Login">Zaten hesabınız var mı? Giriş yapın</a>
